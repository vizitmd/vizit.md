head
  title {% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width initial-scale=1; initial-scale=1; maximum-scale=1; user-scalable=0;')
  <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
  meta(name='description' content='{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}')
  
  link(rel='stylesheet', href='{{ site.url }}{{ site.baseurl }}/assets/css/main.css')
  <!--[if lte IE 8]><link rel="stylesheet" href="{{ site.baseurl }}/assets/css/ie8.css" /><![endif]-->
  <!--[if lte IE 9]><link rel="stylesheet" href="{{ site.baseurl }}/assets/css/ie9.css" /><![endif]-->
  noscript
    link(rel='stylesheet', href='{{ site.url }}{{ site.baseurl }}/assets/css/noscript.css')
  include canonical.html
  link(rel='alternate' type='application/atom+xml' title='{{ site.title }}' href='{{ site.url }}{{ site.baseurl }}/feed.xml')
